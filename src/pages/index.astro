---
import SEO from '../components/SEO.astro'
import Layout from '../layouts/Layout.astro'
import { getCollection } from 'astro:content'

const posts = (
	await getCollection('indlaeg', ({ data }) => {
		return data.published === true
	})
)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3)
---

<head>
	<SEO
		title="Marcus Lorang"
		description="Studerende på Horsens handelsskole."
	/>
</head>
<Layout>
	<div class="main-content">
		<article data-prose>
			<div data-prose>
				<h1 data-heading data-text>Marcus Lorang</h1>
				<p data-text>Studerende på Horsens handelsskole.</p>
			</div>
			<div data-scroller>
				<div class="stack">
					<div class="column">
						<h2 data-heading data-color="dim" data-size="small" data-text>
							Projekter
						</h2>
						<div>
							<div>
								<span data-text>
									<a
										data-variant="text"
										data-link
										href="https://github.com/marcuslorang?tab=repositories"
										rel="noopener"
										target="_blank"
										style="color: var(--gray-12);"
									>
										Github
									</a>
								</span>
								<span>
									<svg
										height="16"
										stroke-linejoin="round"
										style="color:currentColor"
										viewBox="0 0 16 16"
										width="16"
										><path
											fill-rule="evenodd"
											clip-rule="evenodd"
											d="M5.75001 2H5.00001V3.5H5.75001H11.4393L2.21968 12.7197L1.68935 13.25L2.75001 14.3107L3.28034 13.7803L12.4988 4.56182V10.25V11H13.9988V10.25V3C13.9988 2.44772 13.5511 2 12.9988 2H5.75001Z"
											fill="currentColor"></path></svg
									>
								</span>
							</div>
							<p data-color="dim" data-text>
								En samling af alle mine projekter
							</p>
						</div>
					</div>
					<div class="column">
						<h2 data-heading data-color="dim" data-size="small" data-text>
							Indlæg
						</h2>
						{
							posts.map((post) => (
								<div>
									<span data-text>
										<a
											data-variant="text"
											data-link
											href={`/indlaeg/${post.id}`}
											style="color: var(--gray-12);"
										>
											{post.data.title}
										</a>
									</span>
									<p data-color="dim" data-text>
										{post.data.description}
									</p>
								</div>
							))
						}
						<div>
							<span data-text>
								<a
									data-variant="text"
									data-link
									href="/indlaeg"
									style="color: var(--gray-12);"
								>
									Alle indlæg
								</a>
							</span>
							<p data-color="dim" data-text>Alle mine indlæg</p>
						</div>
					</div>
				</div>
			</div>
			<div data-prose>
				<h2 data-heading data-text>Kontakt</h2><p data-text>
					Har du et projekt, jeg kan hjælpe med at realisere, eller noget andet
					på hjertet? <br /> Så kontakt mig på <a
						data-variant="text"
						data-link
						href="mailto:lorangmarcus@gmail.com">lorangmarcus@gmail.com</a
					>
				</p>
			</div>
		</article>
	</div>
</Layout>
